rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection rules
    match /projects/{projectId} {
      // Anyone authenticated can read projects
      allow read: if request.auth != null;
      
      // Only authenticated users can create projects
      // Check the request data, not the resource data (which doesn't exist yet)
      allow create: if request.auth != null 
        && request.auth.token.email == request.resource.data.authorEmail;
      
      // Allow updates for:
      // 1. Project author updating their own project (full access)
      // 2. Any authenticated user to update joinRequests (for joining projects)
      allow update: if request.auth != null 
        && (
          request.auth.token.email == resource.data.authorEmail ||
          // Allow updates that only modify joinRequests array
          (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['joinRequests']) &&
            // Ensure all existing joinRequests are preserved
            request.resource.data.joinRequests.hasAll(resource.data.joinRequests)
          )
        );
      
      // Only project author can delete their own project
      allow delete: if request.auth != null 
        && request.auth.token.email == resource.data.authorEmail;
    }
    
    // Users collection (for future use)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null 
        && request.auth.uid == userId;
      
      // Users can create/update their own profile
      allow write: if request.auth != null 
        && request.auth.uid == userId;
    }
  }
} 